{
  "name": "battle_focused_redesign",
  "description": "REDESIGNED: Heavy battle rewards, minimal exploration - learn to seek and win battles",
  "env": {
    "headless": true,
    "save_final_state": false,
    "early_stop": false,
    "action_freq": 24,
    "max_steps": 4096,
    "print_rewards": false,
    "save_video": false,
    "fast_video": true,
    "debug": false,
    "reward_scale": 1.0,
    "explore_weight": 1.0,
    "termination_condition": null,
    "reward_config": {
      "enable_exploration": true,
      "exploration_new_tile": 0.05,
      "exploration_recent_tile": 0.005,
      "exploration_recent_window": 50,

      "enable_battle": true,
      "battle_start_bonus": 15.0,
      "battle_hp_delta": 7.0,
      "battle_win": 60.0,
      "battle_loss": -5.0,

      "enable_milestone": true,
      "milestone_badge": 500.0,
      "milestone_level_up": 30.0,
      "milestone_event": 5.0,
      "milestone_key_location": 30.0,

      "enable_penalty": true,
      "penalty_step": -0.0005,
      "penalty_wall": -0.05,
      "penalty_stuck": -0.1,

      "enable_legacy_heal": false,
      "legacy_heal": 0.0,

      "reward_scale": 1.0
    }
  },
  "train": {
    "num_envs": 12,
    "total_multiplier": 200,
    "batch_size": 1024,
    "n_epochs": 4,
    "gamma": 0.995,
    "ent_coef": 0.02,
    "learning_rate": 0.0003,
    "clip_range": 0.2,
    "vf_coef": 0.5,
    "max_grad_norm": 0.5,
    "gae_lambda": 0.95
  },
  "recommended_steps": {
    "smoke_test": 1000000,
    "learn_battles": 10000000,
    "master_battles": 50000000
  }
}
