{
  "name": "battle_training",
  "description": "Train battle skills - win battles while minimizing HP loss",
  "env": {
    "headless": true,
    "save_final_state": false,
    "early_stop": false,
    "action_freq": 24,
    "max_steps": 122880,
    "print_rewards": true,
    "save_video": false,
    "fast_video": true,
    "debug": false,
    "reward_scale": 1.0,
    "explore_weight": 0.5,
    "reward_config": {
      "exploration_new_tile": 0.5,
      "exploration_recent_tile": 0.0,
      "battle_hp_delta": 5.0,
      "battle_win": 100.0,
      "battle_loss": -20.0,
      "milestone_badge": 100.0,
      "milestone_level_up": 10.0,
      "milestone_key_location": 5.0,
      "milestone_event": 2.0,
      "penalty_step": -0.005,
      "penalty_wall": -0.05,
      "penalty_stuck": -0.2,
      "reward_scale": 1.0
    }
  },
  "train": {
    "num_envs": 16,
    "total_multiplier": 500,
    "batch_size": 512,
    "n_epochs": 3,
    "gamma": 0.99,
    "ent_coef": 0.01,
    "learning_rate": 0.0003,
    "clip_range": 0.2,
    "vf_coef": 0.5,
    "max_grad_norm": 0.5,
    "gae_lambda": 0.95
  },
  "recommended_steps": {
    "smoke_test": 2000000,
    "early_learning": 20000000,
    "deeper_training": 100000000
  }
}
